---
import { version } from '../../package.json'

interface Props {
  title?: string
  description?: string
}

const {
  title = 'Community Cycling Rides in DC, Maryland & Virginia | DC Paceline',
  description = 'Find group bike rides in Washington DC, Maryland, and Virginia. Filter by pace, location, and schedule to discover your next community ride.'
} = Astro.props

const siteUrl = 'https://dcpaceline.com'
const ogImage = `${siteUrl}/og-image.png`
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={siteUrl} />
    <meta property="og:site_name" content="DC Paceline" />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <link rel="canonical" href={siteUrl} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet" />
  </head>
  <body>
    <a href="#main-content" class="skip-link">Skip to main content</a>
    <header class="header">
      <a href="/" class="logo" style="text-decoration: none;">
        <div class="logo-top">
          <span class="logo-dc">DC</span>
          <div class="logo-stars" aria-hidden="true">
            <span>★</span><span>★</span><span>★</span>
          </div>
        </div>
        <div class="logo-bars" aria-hidden="true">
          <div class="logo-bar"></div>
          <div class="logo-bar"></div>
        </div>
        <span class="logo-paceline">Paceline</span>
      </a>
    </header>
    <h1 class="visually-hidden">Community Cycling Rides in DC, Maryland & Virginia</h1>

    <main class="main" id="main-content">
      <slot />
    </main>

    <footer class="footer">
      <div class="footer-content">
        <div class="footer-left">
          <a href="https://www.strava.com/athletes/2070589" class="footer-link footer-heart-link" target="_blank" rel="noopener noreferrer">
            <svg class="footer-icon heart-icon" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
              <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
            </svg>
            Made by Steve
          </a>
          <a href="https://buymeacoffee.com/dcpaceline" class="footer-link footer-coffee-link" target="_blank" rel="noopener noreferrer">
            <svg class="footer-icon coffee-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
              <path d="M17 8h1a4 4 0 1 1 0 8h-1"/>
              <path d="M3 8h14v9a4 4 0 0 1-4 4H7a4 4 0 0 1-4-4Z"/>
              <line x1="6" y1="2" x2="6" y2="4"/>
              <line x1="10" y1="2" x2="10" y2="4"/>
              <line x1="14" y1="2" x2="14" y2="4"/>
            </svg>
            Support this site
          </a>
        </div>
        <div class="footer-right">
          <a href="https://github.com/stephenmckinney/dc-paceline" class="footer-github" title="View source on GitHub" target="_blank" rel="noopener noreferrer">
            <span>v{version}</span>
            <svg class="github-icon" viewBox="0 0 16 16" fill="currentColor" aria-hidden="true">
              <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"/>
            </svg>
          </a>
        </div>
      </div>
    </footer>
    <!-- Cloudflare Web Analytics -->
    <script defer src='https://static.cloudflareinsights.com/beacon.min.js' data-cf-beacon='{"token": "9a6d417bde274e43949765695780dac8"}'></script>
    <!-- End Cloudflare Web Analytics -->
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
